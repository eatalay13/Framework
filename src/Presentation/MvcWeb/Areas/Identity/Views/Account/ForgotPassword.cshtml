@model ForgotPasswordViewModel
@{ ViewData["Title"] = "Şifremi Unuttum?"; }

<div class="login-forgot">
    <div class="mb-20">
        <h3>Şifremi Unuttum?</h3>
        <div class="text-muted font-weight-bold">Email adresinizi girip sıfırlama kodunu alabilirsiniz.</div>
    </div>
    <form asp-action="ForgotPassword" method="post" class="form">
        <div class="form-group mb-10">
            <input asp-for="Email" class="form-control form-control-solid h-auto py-4 px-8" placeholder="Email" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group d-flex flex-wrap flex-center mt-10">
            <button type="submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2">Gönder</button>
            <a asp-action="Login" class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-2">Geri</a>
        </div>
    </form>
</div>