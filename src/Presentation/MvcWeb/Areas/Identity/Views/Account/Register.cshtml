@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="login-form login-signup pt-11" style="display: block">
    <form asp-action="Register" method="post" class="form" autocomplete="off" role="form">
        <div class="text-center pb-8">
            <h2 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Hesap Oluştur</h2>
            <p class="text-muted font-weight-bold font-size-h4">Hesap oluşturmak için gerekli bilgilerinizi giriniz.</p>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" placeholder="Email" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" placeholder="Şifre" autocomplete="off" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="checkbox mb-0">
                <input type="checkbox" name="agree" />
                <span></span>
                <a href="#">&nbsp;Anlaşma şartlarını &nbsp;</a>
                kabul ediyorum.
            </label>
        </div>

        <div class="form-group d-flex flex-wrap flex-center pb-lg-0 pb-3">
            <button type="submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mx-4">Kayıt Ol</button>
            <a asp-action="Login" class="btn btn-light-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mx-4">Giriş Yap</a>
        </div>
    </form>
</div>
