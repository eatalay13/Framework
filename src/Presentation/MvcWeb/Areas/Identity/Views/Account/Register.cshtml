@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="login-signup">
    <div class="mb-20">
        <h3>Hesap Oluştur</h3>
        <div class="text-muted font-weight-bold">Hesap oluşturmak için gerekli bilgilerinizi giriniz.</div>
    </div>
    <form asp-action="Register" method="post" class="form" autocomplete="off" role="form">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-5">
            <input asp-for="UserName" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Kullanıcı Adı" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <input asp-for="FirstName" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Adınız" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <input asp-for="LastName" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Soyadınız" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <input asp-for="Email" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-5">
            <input asp-for="Password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Şifre" autocomplete="off" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group mb-5 text-left">
            <div class="checkbox-inline">
                <label class="checkbox m-0">
                    <input type="checkbox" name="agree" />
                    <span></span>
                    <a href="#" class="font-weight-bold ml-1">Anlaşma şartlarını</a>
                    &nbsp; kabul ediyorum.
                </label>
            </div>
            <div class="form-text text-muted text-center"></div>
        </div>
        <div class="form-group d-flex flex-wrap flex-center mt-10">
            <button type="submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2">Kayıt Ol</button>
            <a asp-action="Login" class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-2">Giriş Yap</a>
        </div>
    </form>
</div>
